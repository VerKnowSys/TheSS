{
    /* defines minimum version of TheSS to use this Defaults */
    "formatVersion": 0.92,

    /* This shell will be used bo spawn user scripts */
    "shell": "/Software/Zsh/exports/zsh",

    /* defines name of entry in ~/SoftwareData/ and also an Igniter name */
    "name": "No-Name",

    /* defines domains to which application should bind to */
    "domains": [],

    /* when set to false, domain won't be resolved for spcified igniter */
    "resolveDomain": false,

    /* defines pool of ports used by service. by default only one port is required per service */
    "portsPool": 1,

    /* defines disk space check. check disabled if 0 */
    "minimumRequiredDiskSpace": 0,

    /* defines name of software available in Sofin definitions. Default - Builtin is a way of defining igniters for software already installed, or available outside of Sofin */
    "softwareName": "",

    /* defines name of service that's parent to current service (dependency model helper) */
    "parentService": "",

    /* read only access to git repository for web applications */
    "repository": "",

    /* http url addresses to watch */
    "watchHttp": [],

    /* by default assign dynamic port for service */
    "staticPort": -1,

    /* alwaysOn with true will always invoke babysitter to watch for service pid validity */
    "alwaysOn": true,

    /* watchPort with true will always watch for service TCP port with babysitter */
    "watchPort": true,

    /* watchSocket with true will always watch for service UNIX socket with babysitter */
    "watchSocket": false,

    /* watchPort with true will always watch for service UDP port with babysitter */
    "watchUdpPort": false,

    /* autoStart with true will cause service to start automatically */
    "autoStart": false,

    /* by default igniter is working as non web-app  */
    "webApp": false,

    "standaloneDeps": [
        "Postgresql", "Mysql", "Percona-server", "Percona-server55", "Mysql51", "Mysql-usock", "Redis", "Redis-usock", "Nginx", "Passenger", "Sphinx", "Memcached", "Memcached-usock", "Elasticsearch", "Mongodb"
    ],

    /* default notification levels: NOTIFY => 0, WARNING => 1, ERROR => 2, FATAL => 3 */
    "notificationLevel": 0,

    /* service with lower order value is higher on the dependency list */
    "configureOrder": 10,
    "startOrder": 10,

    /* a list of igniters required to launch this software */
    "dependencies": [],

    /* default schedulers format:             */
    /*   "schedulers": [                      */
    /*     "0 0/10 * * * ?! my shell commands",        */
    /*     "2 * 1 * * ?! sometimes this one"           */
    /*     â€¦                                        */
    /*   ],                                         */

    "schedulers": [],

    "install": {
        "commands": "",
        "expectOutput": "",
        "expectOutputTimeout": 0
    },

    "configure":  {
        "commands": "",
        "expectOutput": "",
        "expectOutputTimeout": 60
    },

    "start":  {
        "commands": "",
        "expectOutput": "",
        "expectOutputTimeout": 60
    },

    "afterStart":  {
        "commands": "",
        "expectOutput": "",
        "expectOutputTimeout": 60
    },

    "stop":  {
        "commands": "",
        "expectOutput": "",
        "expectOutputTimeout": 60
    },

    "afterStop":  {
        "commands": "",
        "expectOutput": "",
        "expectOutputTimeout": 60
    },

    "reload":  {
        "commands": "",
        "expectOutput": "",
        "expectOutputTimeout": 60
    },

    "validate": {
        "commands": "",
        "expectOutput": "",
        "expectOutputTimeout": 60
    },

    "babySitter": {
        "commands": "",
        "expectOutput": "",
        "expectOutputTimeout": 60
    }
}
