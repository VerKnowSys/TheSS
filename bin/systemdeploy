#!/usr/bin/env sh

BINDIR="$(cd "$(dirname "$0")" && pwd)"

if [ "$(id -u)" != "0" ]; then
    printf "This script must be run as root!\n"
    exit 1
fi

if [ ! -x "$BINDIR/svdss" ] || [ ! -x "$BINDIR/svddw" ] || [ ! -x "$BINDIR/svdpanel" ]; then
    printf "You need to build TheSS first. Use bin/build, then retry deployment.\n"
    exit 1
fi

$BINDIR/ignitersinstall
cp $BINDIR/svdss /bin/svdss
cp $BINDIR/svddw /bin/svddw
cp $BINDIR/svdnom /bin/svdnom
cp $BINDIR/svdpanel /bin/svdpanel
printf "Success\n"
