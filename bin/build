#!/bin/sh

printf "Loading Sofin environment\n"
if [ "$(id -u)" = "0" ]; then
    . /etc/profile_sofin
else
    . $HOME/.profile
fi

build () {
    SYSTEM_NAME="$(uname)"
    OPTS=""
    case "${SYSTEM_NAME}" in
        Darwin)
            OPTS="-spec darwin-g++"
            ;;
    esac

    (qmake ${OPTS} Notifications.pro) || exit 1
    (make && printf "Successfully built notifications system\n") || exit 1

    case "$1" in
        panel|svdpanel)
            (qmake ${OPTS} Panel.pro) || exit 1
            (make && printf "Successfully built svdpanel\n") || exit 1
            ;;

        ss|svdss)
            (qmake ${OPTS} TheSS.pro) || exit 1
            (make && printf "Successfully built ss\n") || exit 1
            ;;

        tests|test)
            (qmake ${OPTS} TestSS.pro) || exit 1
            (make && printf "Successfully built tests\n") || exit 1
            ;;

        *)
            (qmake ${OPTS} TheSS.pro) || exit 1
            (make && printf "Successfully built ss\n") || exit 1
            (qmake ${OPTS} Notifications.pro) || exit 1
            (make && printf "Successfully built notifications system\n") || exit 1
            (qmake ${OPTS} Panel.pro) || exit 1
            (make && printf "Successfully built svdpanel\n") || exit 1
            (qmake ${OPTS} TestSS.pro) || exit 1
            (make && printf "Successfully built tests\n") || exit 1
            ;;
    esac
}

build "$1"

printf "NOTE: Please run as root: bin/ignitersinstall to install default igniters to /Common/Igniters. They're required for ss to run properly!\n"
