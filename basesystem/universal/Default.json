{
    "formatVersion": "0.86",

/* defines name of entry in ~/SoftwareData/ and also an Igniter name */
    "name": "No-Name",

    "domains": [],

/* when set to false, domain won't be resolved for spcified igniter */
    "resolveDomain": false,

/* defines pool of ports used by service */
    "portsPool": 1,

/* defines disk space check. By default user has to have at least 1 GiB free disk space */
    "minimumRequiredDiskSpace": 0,

/* defines name of software available in Sofin definitions. Default - Builtin is a way of defining igniters for software already installed, or available outside of Sofin */
    "softwareName": "",

/* defines name of service that's parent to current service (dependency model helper) */
    "parentService": "",

/* reqad only access to git repository for web applications */
    "repository": "",

/* http url addresses to watch */
    "watchHttp": [],

/* by default assign dynamic port for service   */
    "staticPort": -1,

    /* alwaysOn with true will always invoke babysitter to watch for service pid validity */
    "alwaysOn": true,

    /* watchPort with true will always watch for service TCP port with babysitter */
    "watchPort": true,

    /* watchPort with true will always watch for service UDP port with babysitter */
    "watchUdpPort": false,

    /* autoStart with true will cause service to start automatically */
    "autoStart": false,

    /* by default igniter is working as non web-app  */
    "webApp": false,

    "standaloneDeps": [
        "postgresql", "mysql", "mysql51", "mysql-usock", "redis", "redis-usock", "nginx", "passenger", "passenger19", "sphinx", "memcached", "memcached-usock", "elasticsearch", "mongodb"
    ],

    /* default notification levels: NOTIFY => 0, WARNING => 1, ERROR => 2, FATAL => 3 */
    "notificationLevel": 0,

    /* service with lower order value is higher on the dependency list */
    "configureOrder": 10,
    "startOrder": 10,

/* a list of igniters required to launch this software */
    "dependencies": [],

/* default schedulers format:             */
/*   "schedulers": [                      */
/*     "0 0/10 * * * ?! my shell commands",        */
/*     "2 * 1 * * ?! sometimes this one"           */
/*     â€¦                                        */
/*   ],                                         */

    "schedulers": [],

    "install": {
        "commands": "",
        "expectOutput": "",
        "expectOutputTimeout": 0
    },

    "configure":  {
        "commands": "",
        "expectOutput": "",
        "expectOutputTimeout": 60
    },

    "start":  {
        "commands": "",
        "expectOutput": "",
        "expectOutputTimeout": 60
    },

    "afterStart":  {
        "commands": "",
        "expectOutput": "",
        "expectOutputTimeout": 60
    },

    "stop":  {
        "commands": "",
        "expectOutput": "",
        "expectOutputTimeout": 60
    },

    "afterStop":  {
        "commands": "",
        "expectOutput": "",
        "expectOutputTimeout": 60
    },

    "reload":  {
        "commands": "",
        "expectOutput": "",
        "expectOutputTimeout": 60
    },

    "validate": {
        "commands": "",
        "expectOutput": "",
        "expectOutputTimeout": 60
    },

    "babySitter": {
        "commands": "",
        "expectOutput": "",
        "expectOutputTimeout": 60
    }
}
